<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Swoq.ReplayViewer.Views"
        xmlns:vm="clr-namespace:Swoq.ReplayViewer.ViewModels"
        x:Class="Swoq.ReplayViewer.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        mc:Ignorable="d"
        Title="Swoq Replay Viewer" Height="900" Width="1600"
        WindowStartupLocation="CenterScreen"
        DragDrop.AllowDrop="True">
    <Grid RowDefinitions="auto,*">
        <Grid Grid.Row="0" ColumnDefinitions="auto,*">
            <Button Grid.Column="0" Margin="8" Padding="8" VerticalAlignment="Center" Command="{Binding LoadCommand}">ðŸ’¾ Load</Button>
            <SelectableTextBlock Grid.Column="1" VerticalAlignment="Center" TextAlignment="Left" Text="{Binding CurrentFile}"/>
        </Grid>
        <local:ReplayView Grid.Row="1" DataContext="{Binding Replay}"/>

        <Border Grid.Row="1" IsVisible="{Binding HasErrorMessage}" Background="Black">
            <Grid RowDefinitions="*,auto,*" ColumnDefinitions="*,auto,*">
                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical">
                    <TextBlock FontWeight="Bold" HorizontalAlignment="Center">ðŸ›‘ Error ðŸ›‘</TextBlock>
                    <Separator/>
                    <SelectableTextBlock Text="{Binding ErrorMessage}" HorizontalAlignment="Center"/>
                    <Separator/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
