<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Swoq.InfraUI.Views"
             x:Class="Swoq.InfraUI.Views.GroupBox">
    <UserControl.Template>
        <ControlTemplate TargetType="{x:Type local:GroupBox}">
            <Grid RowDefinitions="auto,*" ColumnDefinitions="auto,*" Margin="10">

                <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="2"
                        Margin="0,10,0,0"
                        Padding="10"
                        CornerRadius="5"
                        BorderThickness="2" BorderBrush="{DynamicResource SliderTrackFill}"
                        Background="{DynamicResource SystemRegionBrush}">
                    <ContentPresenter Content="{TemplateBinding Content}"/>
                </Border>

                <Border Grid.Row="0" Grid.Column="0" Padding="5,0,5,0" Margin="5,0,0,0" Background="{DynamicResource SystemRegionBrush}">
                    <ContentPresenter Content="{TemplateBinding Header}"/>
                </Border>

            </Grid>
        </ControlTemplate>
    </UserControl.Template>
</UserControl>
