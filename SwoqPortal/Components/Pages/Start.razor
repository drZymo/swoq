@page "/"
@inject ILogger<Start> Logger
@inject NavigationManager NavigationManager

<PageTitle>Start</PageTitle>

<h1>Sioux Weekend of Quest</h1>

Please sign in with your Player ID.

If you do not have a player ID yet, then <NavLink href="register">register here</NavLink> first.

<form method="post" @onsubmit="Submit" @formname="signin-plain-form">
    <AntiforgeryToken />
    <div>
        <label>
            Player ID:
            <InputText @bind-Value="PlayerId" />
        </label>
    </div>
    <div>
        <button type="submit">Submit</button>
    </div>
</form>

@code {
    [SupplyParameterFromForm]
    public string PlayerId { get; set; } = string.Empty;

    private void Submit()
    {
        NavigationManager.NavigateTo($"/player/{PlayerId}");
    }
}